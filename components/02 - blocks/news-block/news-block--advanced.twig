<div class="card">
  <img class="card__img" src="{{ card_image }}" alt="Card image cap">
  <div class="card__body">
    <span class="card__label">{{ card_tag }}</span>
    <h2 class="card__title">
      <a href="{{ card_link_url }}">{{ card_title }}</a>
    </h2>
    <button id="card__button{{ card_position }}" class="card__bttn" aria-expanded="false"><span class="element-invisible">Details</span></button>
    <div class="card__details">
      <span class="card__date">{{ card__date }}</span>
      <p class="card__text">{{ card_text }}</p>
      <a class="card__link" href="{{ card_link_url }}">{{ card_link_title }}</a>
    </div>
  </div>
</div>
